# Postgres (shared by Dagster and DuckLake containers)
POSTGRES_USER=dagster
POSTGRES_PASSWORD=dagster
POSTGRES_DB=dagster

# Dagster
DAGSTER_MODULE=pluginlake.definitions
DAGSTER_PG_HOST=postgres
DAGSTER_PG_USER=dagster
DAGSTER_PG_PASSWORD=dagster
DAGSTER_PG_DB=dagster

# DuckLake catalog (PostgreSQL metadata store)
DUCKLAKE_PG_HOST=localhost
DUCKLAKE_PG_PORT=5432
DUCKLAKE_PG_USER=dagster
DUCKLAKE_PG_PASSWORD=dagster
DUCKLAKE_PG_DB=ducklake

# Volumes (optional overrides)
# POSTGRES_DATA=.data/postgres
# DAGSTER_COMPUTE_LOGS=.data/dagster/compute_logs
